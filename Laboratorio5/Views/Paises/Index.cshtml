@model List<Laboratorio5.Models.PaisModel>;

@{
    ViewData["Title"] ="Lista Paises";
}

<h1>@ViewBag.MainTitle</h1>

<div>
    <a href="@Url.Action("CrearPais", "Paises")" class = "btn btn-success"> Crear Pais </a>
    <table class="table">

        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Idioma</th>
                <th>Continente</th>
                <th>Editar </th>
                <th> Borrar </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model) {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Nombre</td>
                    <td>@item.Idioma</td>
                    <td>@item.Continente</td>
                    <td> @Html.ActionLink("Editar", "EditarPais", new {identificador = @item.Id},
                        new {@class = "btn btn alert-info", @onClick = "return confirm('Quiere editar este pais?');"} )</td>

                    <td>  @using (Html.BeginForm("BorrarPais", "paises", new {identificador = @item.Id},
                        FormMethod.Post, false, new {enctype = "multipart/form-data" }))
                        {
                            <input type ="submit" class = "btn btn alert-danger" value="Borrar" />
                        } </td>
                </tr>
            }
        </tbody>
    </table>
</div>